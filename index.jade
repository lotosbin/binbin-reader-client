doctype html
html(lang='zh-cn',ng-app='myapp')
    head
        link(rel='stylesheet',href='bower_components/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet',href='public/css/index.css')
        script(src='bower_components/jquery/dist/jquery.min.js')
        script(src='bower_components/angular/angular.min.js')
        script(src='livereload.js')
        script(src='public/js/controllers.js')
    body(ng-controller='feedCtrl')
      div.row.top
        form
          div.col-sm-10
            input.form-control(type='text',ng-model='url')
          div.col-sm-2
            button.btn.btn-default.pull-right(type='button',ng-click='add()') add
      p
      div.row.vcenter
        div.list-group
          div.list-group-item(ng-repeat='item in articles')
            h2(ng-bind='item.title')
            p(ng-bind='item.summary')
            p(ng-bind='item.content')
      div.row.bottom
        center
          p copyright(c)2015
